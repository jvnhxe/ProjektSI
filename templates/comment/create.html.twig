{% extends 'base.html.twig' %}

{% block title %}
    Create Comment
{% endblock %}

{% block body %}
    <h1>{{ 'action.comment_create'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ path('post_index') }}" class="btn btn-link">{{ 'backtolist'|trans }}</a>
    </div>
    {{ form_end(form) }}
{% endblock %}