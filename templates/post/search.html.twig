{# templates/post/search.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Search Posts{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'search_posts'|trans }}</h1>
        <div class="search-panel mb-4">
            <form method="GET" action="{{ path('post_search') }}">
                <div class="input-group">
                    <input type="text"
                           class="form-control"
                           name="q"
                           value="{{ query }}"
                           placeholder="{{ 'search_posts'|trans }}"
                           autocomplete="off">
                    <button class="btn btn-primary" type="submit">{{ 'search'|trans }}</button>
                </div>
            </form>
        </div>

        {# Search Results #}
        {% if query is not empty %}
            <div class="search-results">
                <h3>Search Results for "{{ query }}"</h3>

                {% if posts|length > 0 %}
                    <p class="text-muted">Found {{ posts|length }} post(s)</p>

                    <div class="row">
                        {% for post in posts %}
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="{{ path('post_show', {id: post.id}) }}">
                                                {{ post.title }}
                                            </a>
                                        </h5>
                                        <p class="card-text">
                                            {{ post.content|slice(0, 150) }}...
                                        </p>
                                        <small class="text-muted">
                                            {{ post.createdAt|format_date('long') }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        No posts found matching "{{ query }}"
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}