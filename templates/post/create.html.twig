{% extends 'base.html.twig' %}

{% block title %}
    Create Post
{% endblock %}

{% block body %}
    <h1>{{ 'action.create_post'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ path('post_index') }}" class="btn btn-link">{{ 'Back to list'|trans }}</a>
    </div>
    {{ form_end(form) }}
{% endblock %}