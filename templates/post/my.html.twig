{% extends 'base.html.twig' %}

{% block title %}Moje posty{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Moje posty</h1>
            <a href="{{ path('post_create') }}" class="btn btn-primary">Dodaj nowy</a>
        </div>

        <form method="get" class="mb-3">
            <div class="row g-2">
                <div class="col-auto">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="all" {{ status == 'all' ? 'selected' }}>Wszystkie</option>
                        <option value="published" {{ status == 'published' ? 'selected' }}>Opublikowane</option>
                        <option value="draft" {{ status == 'draft' ? 'selected' }}>Szkice</option>
                    </select>
                </div>
                {# jeśli masz inne filtry (kategoria itd.), dodaj tu #}
            </div>
        </form>

        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>Tytuł</th>
                <th>Kategoria</th>
                <th>Data</th>
                <th>Status</th>
                <th class="text-end">Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination %}
                {% set badge = post.status == 'published' ? 'success' : 'secondary' %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>{{ post.category.title ?? '-' }}</td>
                    <td>{{ post.postDate ? post.postDate|date('Y-m-d H:i') : '-' }}</td>
                    <td><span class="badge bg-{{ badge }}">{{ post.status }}</span></td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('post_show', {id: post.id}) }}">Podgląd</a>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('post_edit', {id: post.id}) }}">Edytuj</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center text-muted">Brak postów</td></tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
