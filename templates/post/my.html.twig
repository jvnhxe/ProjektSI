{% extends 'base.html.twig' %}

{% block title %}Moje posty{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>{{ 'myposts'|trans }}</h1>
            <a href="{{ path('post_create') }}" class="btn btn-primary">{{ 'action.create_post'|trans }}</a>
        </div>

        <form method="get" class="mb-3">
            <div class="row g-2">
                <div class="col-auto">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="{ 'templates.post.my.html.twig.value.all'|trans }" {{ status == 'all' ? 'selected' }}>{{ 'wszystkie'|trans }}</option>
                        <option value="{ 'templates.post.my.html.twig.value.published'|trans }" {{ status == 'published' ? 'selected' }}>{{ 'opublikowane'|trans }}</option>
                        <option value="{ 'templates.post.my.html.twig.value.draft'|trans }" {{ status == 'draft' ? 'selected' }}>{{ 'szkice'|trans }}</option>
                    </select>
                </div>
            </div>
        </form>

        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'data'|trans }}</th>
                <th>{{ 'label.status'|trans }}</th>
                <th class="text-end">{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination %}
                {% set badge = post.status == 'published' ? 'success' : 'secondary' %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>{{ post.category.title ?? '-' }}</td>
                    <td>{{ post.postDate ? post.postDate|date('Y-m-d H:i') : '-' }}</td>
                    <td><span class="badge bg-{{ badge }}">{{ post.status }}</span></td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('post_show', {id: post.id}) }}">{{ 'action.show'|trans }}</a>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('post_edit', {id: post.id}) }}">{{ 'Edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center text-muted">{{ 'no_posts'|trans }}</td></tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
