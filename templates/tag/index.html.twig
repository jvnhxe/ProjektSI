{% extends 'base.html.twig' %}
{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>{{ 'newtag'|trans }}</h1>
        <a href="{{ path('tag_new') }}" class="btn btn-primary">{{ 'newtag'|trans }}</a>
    </div>
    <table class="table table-striped">
        <thead><tr><th>ID</th><th>{{ 'label.title'|trans }}</th><th class="text-end">{{ 'label.actions'|trans }}</th></tr></thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td class="text-end">
                    <a href="{{ path('tag_edit', {id: tag.id}) }}" class="btn btn-sm btn-outline-secondary">{{ 'action.edit'|trans }}</a>
                    <form method="post" action="{{ path('tag_delete', {id: tag.id}) }}" class="d-inline"
                          onsubmit="return confirm('Na pewno usunąć?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_tag_' ~ tag.id) }}">
                        <button class="btn btn-sm btn-outline-danger">{{ 'action.delete'|trans }}</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="3" class="text-center text-muted">{{ 'notag'|trans }}</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
